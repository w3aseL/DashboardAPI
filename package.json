{
  "name": "twodder-bot-wsl",
  "version": "0.0.1",
  "description": "A Twitter bot for w3aseL!",
  "main": "index.js",
  "scripts": {
    "fresh-install": "rm -r node_modules/ && sudo LZZ_COMPAT=1 npm install",
    "start": "nodemon --exec babel-node index.js \"backend-port=8000 debug=true\"",
    "prod": "babel-node index.js backend-port=8080",
    "pm2": "pm2 start npm --no-automation --name \"dash-api\" -- run prod"
  },
  "keywords": [
    "twodder"
  ],
  "author": "Noah Templet",
  "license": "ISC",
  "dependencies": {
    "aws-sdk": "^2.915.0",
    "bcrypt": "^5.0.0",
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "express-fileupload": "^1.2.1",
    "generate-password": "^1.6.0",
    "helmet": "^4.6.0",
    "jsonwebtoken": "^8.5.1",
    "minimist": "^1.2.5",
    "node-cron": "^2.0.3",
    "request": "^2.88.0",
    "sequelize": "^6.3.5",
    "spotify-web-api-node": "^4.0.0",
    "sqlite3": "^5.0.0",
    "tmi.js": "^1.8.3",
    "twit": "^2.2.11",
    "uuid": "^7.0.3"
  },
  "devDependencies": {
    "@babel/cli": "^7.14.3",
    "@babel/core": "^7.9.0",
    "@babel/node": "^7.8.7",
    "@babel/preset-env": "^7.9.5"
  },
  "nodemonConfig": {
    "ignore": [
      "storage/twitter/*.json",
      "storage/*.db"
    ]
  }
}
